@using AutoRepairShop.Components.Layout
<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">AutoRepairShop</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <AuthorizeView>
            <div class="nav-item px-3 mb-1">
                <NavLink class="nav-link menuLabel" href="" Match="NavLinkMatch.All">
                    <span class="bi bi-house-door-fill-nav-menu me-3" aria-hidden="true"></span> Home
                </NavLink>
            </div>
        </AuthorizeView>
        <AuthorizeView Roles="Administrador, Balcao">
            <div class="nav-item px-3 mb-1">
                <NavLink class="nav-link menuLabel" href="clientes" Match="NavLinkMatch.All">
                    <span class="fas fa-users fa-lg me-3" aria-hidden="true"></span> Clientes
                </NavLink>
            </div>
        </AuthorizeView>
        <AuthorizeView Roles="Administrador, Balcao">
            <div class="nav-item px-3 mb-1">
                <NavLink class="nav-link menuLabel" href="produtos" Match="NavLinkMatch.All">
                    <span class="fas fa-box fa-lg me-3" aria-hidden="true"></span> Produtos
                </NavLink>
            </div>
        </AuthorizeView>
        <AuthorizeView Roles="Administrador, Balcao">
            <div class="nav-item px-3 mb-1">
                <NavLink class="nav-link menuLabel" href="veiculos" Match="NavLinkMatch.All">
                    <span class="fas fa-car-side fa-lg me-3" aria-hidden="true"></span> Veículos
                </NavLink>
            </div>
        </AuthorizeView>
        <AuthorizeView Roles="Administrador, Balcao">
            <div class="nav-item px-3  mb-1">
                <NavLink class="nav-link menuLabel" href="ordemservico" Match="NavLinkMatch.All">
                    <span class="fas fa-clipboard-list fa-lg me-3" aria-hidden="true"></span> Ordem Serviço
                </NavLink>
            </div>
        </AuthorizeView>
        <AuthorizeView Roles="Administrador">
            <div class="nav-item px-3 mb-1">
                <NavLink class="nav-link menuLabel" href="usuarios" Match="NavLinkMatch.All">
                    <span class="fas fa-user-circle fa-lg me-3"></span> Usuários
                </NavLink>
            </div>
        </AuthorizeView>
        <AuthorizeView Roles="Administrador">
            <div class="nav-item px-3 mb-1">
                <NavLink class="nav-link menuLabel" href="permissoes" Match="NavLinkMatch.All">
                    <span class="fas fa-key fa-lg me-3"></span> Permissões
                </NavLink>
            </div>
        </AuthorizeView>
        <AuthorizeView Roles="Administrador, Balcao">
            <div class="nav-item px-3 mb-1">
                <NavLink class="nav-link menuLabel" href="pagamentos" Match="NavLinkMatch.All">
                    <span class="fas fa-cash-register fa-lg me-3"></span> Pagamentos
                </NavLink>
            </div>
        </AuthorizeView>
    </nav>
</div>

